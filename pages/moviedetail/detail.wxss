/* pages/moviedetail/detail.wxss */
.detail-container{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  background-color: darkslategrey
}
.img-container{
  flex: 1;
}
.img-container image{
  width:320rpx;
  height: 220rpx
}
.info-container{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 20rpx 0 20rpx 0
}
.info-row{
  font-size: 24rpx;
  color: white;
  display: flex;
}
.info-row-left{
  flex: 1;
}
.info-row-right{
  flex: 2;
  color: orange;
  text-align: center;
}
.movie-intr{
  background-color:  ghostwhite;
  font-size: 24rpx;
  padding: 40rpx;
  line-height: 40rpx
}
.scroll-header{
display: flex;
flex-direction: column;
white-space: nowrap;   
}
.scroll-header view{
border:none;
display: inline-block;  
}
.scroll-header image{
  width:200rpx;
  height: 300rpx;
  margin: 6rpx 6rpx 6rpx 6rpx
}
.act-info{
  font-size: 38rpx;
  margin-left: 10px;
  margin-bottom: 10px;
}
.act-img{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 10rpx;
}
.actor-name{
  font-size: 36rpx;
}

.dir_info{
  padding:10px 0 0 20px;
}
.dir_img{
  width: 200px;
  height: 150px;
  padding: 20px;
}
